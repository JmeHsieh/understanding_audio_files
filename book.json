{
    "title": "認識音檔（公開版本）",
    "description": "一份專門講解音檔格式的小冊子",
    "author": "Weizhong Yang a.k.a zonble <zonble@gmail.com>",
    "bookRoot": "https://zonble.github.io/understanding_audio_files/",
    "pdf": {
        "fontSize": 12,
        "paperSize": "a5"
    },
    "language": "zh-TW",
    "plugins": [
        "japanese-support",
        "toc",
        "tree",
        "-sharing",
        "code",
        "-lunr", 
        "-search", 
        "search-pro",
        "splitter",
        "extra-html"
    ],
    "pluginsConfig": {
        "toc": {
            "addClass": true,
            "className": "toc"
        },
        "extra-html": {
            "footer": {
                "files": [
                    "./ga.html"
                ]
            }
        }
    },
    "styles": {
        "website": "styles/website.css",
        "pdf": "styles/pdf.css",
        "epub": "styles/epub.css",
        "mobi": "styles/epub.css"
    }
}